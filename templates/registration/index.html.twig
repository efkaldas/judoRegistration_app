{% extends 'base.html.twig' %}

{% block title %}Registracija{% endblock %}
{% block body %}
<!-- Default form register -->
<form class="text-center border border-light p-5">

    <p class="h4 mb-4">Registracija</p>

        <!-- E-mail -->
    <input type="text" id="klub_name" class="form-control mb-4" placeholder="Klubo pavadinimas">

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="first_name" class="form-control" placeholder="Vardas">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" id="last_name" class="form-control" placeholder="Pavardė">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" id="email" class="form-control mb-4" placeholder="El-paštas">

    <!-- Password -->
    <input type="password" id="password" class="form-control" placeholder="Slaptažodis" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
        Nemažiau 8 simbolių
    </small>

    <!-- Phone number -->
    <input type="text" id="defaultRegisterPhonePassword" class="form-control" placeholder="Telefono numeris" aria-describedby="defaultRegisterFormPhoneHelpBlock">
    <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
        Optional - for two step authentication
    </small>

    <!-- Newsletter -->
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="defaultRegisterFormNewsletter">
        <label class="custom-control-label" for="defaultRegisterFormNewsletter">Subscribe to our newsletter</label>
    </div>

    <!-- Sign up button -->
    <button class="btn btn-info my-4 btn-block" type="submit">Registruotis</button>

    <!-- Social register -->
    <p>or sign up with:</p>

    <a type="button" class="light-blue-text mx-2">
        <i class="fab fa-facebook-f"></i>
    </a>
    <a type="button" class="light-blue-text mx-2">
        <i class="fab fa-twitter"></i>
    </a>
    <a type="button" class="light-blue-text mx-2">
        <i class="fab fa-linkedin-in"></i>
    </a>
    <a type="button" class="light-blue-text mx-2">
        <i class="fab fa-github"></i>
    </a>

    <hr>

    <!-- Terms of service -->
    <p>By clicking
        <em>Sign up</em> you agree to our
        <a href="" target="_blank">terms of service</a>

</form>
<!-- Default form register -->
{% endblock %}